<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" xmlns:android1="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:id="@+id/title_bar" style="@style/main_title_bar_style">
        <FrameLayout android:id="@+id/top_head_container" 
            android:paddingLeft="10.0dip" 
            android:paddingRight="10.0dip" 
            android:layout_width="wrap_content"
             android:layout_height="fill_parent">
            <ImageView android:layout_gravity="center_vertical" 
                android:id="@+id/top_more" 
                android:contentDescription="@string/app_name"
                android:background="@drawable/bg_head" 
                android:src="@drawable/menu"
                android:layout_width="@dimen/head_size" 
                android:layout_height="@dimen/head_size" 
                android:scaleType="fitXY" />
        </FrameLayout>

		<ImageView
		    android:id="@+id/top_head"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_alignParentRight="true"
		    android:layout_alignParentTop="true"
		    android:contentDescription="@string/app_name"
		    android:gravity="center"
		    android:padding="1.0dip"
		    android:scaleType="centerInside"
		    android:src="@drawable/default_round_head" />

	</RelativeLayout>

    <TextView
        android:id="@+id/first_click"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_bar"
        android:layout_marginLeft="51dp"
        android:background="@drawable/atmosphere_10"
        android:gravity="left"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_comment_20" />

    <TextView
        android:id="@+id/second_click"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/first_click"
        android:layout_toRightOf="@+id/first_click"
        android:background="@drawable/atmosphere_14"
        android:gravity="left"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_comment_20" />

    <TextView
        android:id="@+id/third_click"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/first_click"
        android:layout_below="@+id/second_click"
        android:background="@drawable/atmosphere_03_17"
        android:gravity="left"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_comment_20" />
    
</RelativeLayout>
